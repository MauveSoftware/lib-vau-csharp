  </ItemGroup>

  <ItemGroup>
    <Content Include="resources\vau-sig-key.der">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="resources\vau_server_keys.cbor">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
